<!DOCTYPE html>
<html>
  <head>
  @using JobBoard.Models;
  <title>C# Job Board</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  </head>
  <body>
    <div class="gr">
      <h1 id="type">Job Postings</h1>
      @if (Model.Count == 0)
      {
        <p>There are currently no job postings available.</p>
      }
      @foreach (var newJob in Model)
      {
        <ul id="center">
          <li>Job Title: @newJob.Title</li>
          <li>Job Description: @newJob.Description</li>
          <li>Contact Info: @newJob.Phone</li>
          <li>Job Pay: @newJob.Pay</li>
        </ul>
      }
    </div>
    <a href="/CreateForm"><button id="btnLocation">Add a job post!</button></a>
    <br>
    <form action="/jobs/delete" method="post">
    <button type="submit" name="button" id="btnLocation">Clear all Jobs</button>
    </form>
  </body>
</html>